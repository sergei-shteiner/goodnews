# HTTP-Server für Let's Encrypt und Weiterleitung zu HTTPS
server {
    listen 80;
    server_name gute-nachrichten.info;

    # Für Let's Encrypt Challenge
    location /.well-known/acme-challenge/ {
        root /opt/bitnami/nginx/html;
        allow all;
    }

    # Weiterleitung von HTTP zu HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS-Server
server {
    listen 443 ssl;
    server_name gute-nachrichten.info;

    # SSL-Zertifikate von Let's Encrypt
    ssl_certificate /etc/letsencrypt/live/gute-nachrichten.info/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/gute-nachrichten.info/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Für Let's Encrypt Challenge (optional)
    location /.well-known/acme-challenge/ {
        root /opt/bitnami/nginx/html;
        allow all;
    }

    # Weiterleitung an Gunicorn
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
